# Virtual Try-On AI System Configuration

# Server Settings
PORT=5000
NODE_ENV=development

# API Keys and Credentials
AI_API_KEY=your_ai_api_key_here
CLOTHING_DB_API_KEY=your_clothing_database_api_key

# Database Configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=virtual_tryon_db
DB_USER=admin
DB_PASSWORD=your_database_password

# Image Processing
MAX_IMAGE_SIZE=50000000
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# TensorFlow Models
TF_MODEL_PATH=./models
USE_GPU=true

# Features
ENABLE_VIRTUAL_TRYON=true
ENABLE_RECOMMENDATIONS=true
ENABLE_BODY_ANALYSIS=true
ENABLE_COLOR_MATCHING=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Settings
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=24h

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=virtual-tryon-bucket
AWS_REGION=us-east-1
